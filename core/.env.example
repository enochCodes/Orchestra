# Orchestra Backend Configuration

# Server
SERVER_PORT=8080

# PostgreSQL (matches docker-compose db service; use localhost when backend runs on host)
DATABASE_URL=postgres://orchestra:orchestra_password@localhost:5432/orchestra?sslmode=disable

# Redis (used by Asynq; matches docker-compose redis service)
REDIS_ADDR=localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Security
# 32-byte hex key for AES-256-GCM encryption of SSH keys & kubeconfig
# Generate with: openssl rand -hex 32
ENCRYPTION_KEY=

# JWT secret for auth tokens (change in production)
JWT_SECRET=orchestra-jwt-secret-change-in-production

# Optional
SSH_KEY_PASSPHRASE=

# Development: set to true to skip JWT auth (uses first admin user)
SKIP_AUTH=false
